<Window x:Class="PortfolioApp.MainWindow"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            Title="MainWindow" Height="485" Width="525">

    <Grid x:Name="ImageGrid" Height="444" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Image" FontSize="22" TextAlignment="Left" Width="170"/>
        <TextBlock Grid.Column="1" Text="Title" FontSize="22" TextAlignment="Left" Width="60"/>
        <ListBox Name="myListBox" Margin="0,0,-285,0" Grid.ColumnSpan="2" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding ImageTitle}" FontSize="22" TextAlignment="Left" Width="150"/>
                        <!--<Image Source="{Binding weatherIconUrl}" Width="40" Height="40"/>-->
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>  
