<Window x:Class="PortfolioApp.MainWindow"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            Title="MainWindow" Height="800" Width="1000">
    
    <Window.Resources>
        <DataTemplate x:Key="ImageTemplate" >
            <WrapPanel Orientation="Vertical" Margin="5" MouseDown="Image_Click">
                <Image Width="300" Height="300" Stretch="UniformToFill" Source="{Binding BitmapImg}"/>
                <TextBlock Text="{Binding Title}"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>

    <ScrollViewer>
        <StackPanel>
            <WrapPanel Margin="10" HorizontalAlignment="Center">
                <Button Name="btnLoadFromFile" Margin="0,0,20,0" Click="BtnUpload_Click">Upload Image</Button>
            </WrapPanel>
            <Grid x:Name="ImageGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="1"
                      Name="ImageList"
                      ItemTemplate="{StaticResource ImageTemplate}"
                      ItemsSource="{Binding BitmapImg}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
                <TextBlock Name="SampleTextBlock"
                       Text="{Binding Title}"
                       DataContext="{StaticResource ImageTemplate}" />
            </Grid>
        </StackPanel>
    </ScrollViewer>

</Window>  
